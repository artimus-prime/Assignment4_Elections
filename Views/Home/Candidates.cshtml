@model Assignment4_Elections.Models.Candidates

@{
    ViewData["Title"] = "Candidates";
}

<h3 class="page-header">Candidates</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Party</th>
            <th>Office</th>
            <th>State</th>
            <th>Active Through</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.results)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.candidate_id)</td>
                <td>@Html.DisplayFor(modelItem => item.name)</td>
                <td>@Html.DisplayFor(modelItem => item.party_full)</td>
                <td>@Html.DisplayFor(modelItem => item.office_full)</td>
                <td>@Html.DisplayFor(modelItem => item.state)</td>
                <td>@Html.DisplayFor(modelItem => item.active_through)</td>
            </tr>
        }
    </tbody>
</table>
