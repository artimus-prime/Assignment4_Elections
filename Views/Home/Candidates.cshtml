@model Assignment4_Elections.Models.Candidates

@{
    ViewData["Title"] = "Candidates";
}
    <head>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>

    <h2>Candidates</h2>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Party</th>
            <th>Office</th>
            <th>State</th>
            <th>Active Through</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.results)
        {

        <tr>

            <td>@Html.DisplayFor(modelItem => item.candidate_id)</td>
            <td>@Html.DisplayFor(modelItem => item.name)</td>
            <td>@Html.DisplayFor(modelItem => item.party_full)</td>
            <td>@Html.DisplayFor(modelItem => item.office_full)</td>
            <td>@Html.DisplayFor(modelItem => item.state)</td>
            <td>@Html.DisplayFor(modelItem => item.active_through)</td>
        </tr>

        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Home</a>
</div>
